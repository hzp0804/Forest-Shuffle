/* components/UserInfoModal/UserInfoModal.wxss */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

.modal-container {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  transform: scale(0.95);
  animation: popIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

.modal-header {
  text-align: center;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #7f8c8d;
}

.modal-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  background: #f0f2f5;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  display: block;
}

.camera-icon {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 0;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #95a5a6;
}

.input-section {
  width: 100%;
}

.input-group {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input-group:focus-within {
  background: #fff;
  border-color: #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.1);
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  min-width: 80rpx;
}

.nickname-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  height: 60rpx; /* Ensure sufficient touch target */
}

.placeholder {
  color: #bdc3c7;
}

.modal-footer {
  width: 100%;
}

.btn-confirm {
  width: 100%;
  background: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 0;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.2);
}

.btn-confirm[disabled] {
  background: #bdc3c7;
  box-shadow: none;
  color: #ecf0f1;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes popIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}
