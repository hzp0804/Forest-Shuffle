<view class="drawer-mask {{ visible ? 'show' : '' }}" bindtap="onClose"></view>
<view class="drawer-container {{ visible ? 'show' : '' }}">
  <view class="drawer-header">
    <text class="drawer-title">{{ content.title }}</text>
    <view class="close-btn" bindtap="onClose">âœ•</view>
  </view>
  
  <scroll-view scroll-y="true" class="drawer-content">
    <block wx:for="{{ content.sections }}" wx:key="index">
      <view class="section">
        <view class="section-header" wx:if="{{ item.header }}">{{ item.header }}</view>
        <text class="section-text">{{ item.content }}</text>
      </view>
    </block>
    <!-- Placeholder for bottom padding -->
    <view style="height: 40rpx;"></view>
  </scroll-view>
</view>
