/* Component Styles */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(20, 30, 20, 0.75);
  /* Darker, slightly greenish tint */
  backdrop-filter: blur(10px);
  /* Glassmorphism */
  z-index: 11000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.detail-container {
  width: 90%;
  max-width: 640rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: auto;
  padding: 0;
  box-sizing: border-box;
}

/* Card Preview Centered Inside */
.card-preview-wrapper {
  display: flex;
  justify-content: center;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.card-preview-container {
  width: 390rpx;
  /* Doubled from 195 */
  height: 600rpx;
  /* Doubled from 300 */
  padding-top: 0;
  /* Remove scaling hack */
  position: relative;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  background-color: #eee;
  /* Placeholder while loading */
  animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes popIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }

  to {
    transform: scale(1);
    opacity: 1;
  }
}

.card-sprite-viewport {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-sprite-native {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  /* background-position and background-size are set inline */
}

/* Content Panel */
.content-panel {
  width: 100%;
  background: #FDFBF7;
  /* Warm off-white */
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  /* No top padding needed as wrapper has it */
  padding-bottom: 30rpx;
  animation: slideUp 0.3s ease-out;
  position: relative;
  z-index: 1;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Header & Tabs */
.card-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 800;
  padding: 8rpx 0 20rpx;
  /* Reduced top padding */
  color: #2c3e50;
  letter-spacing: 1rpx;
}

.tabs-header {
  display: flex;
  background: #EEEBE3;
  padding: 8rpx;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #7f8c8d;
  position: relative;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  font-weight: 600;
}

.tab-item.active {
  background: #FFFFFF;
  color: #2E7D32;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* Content Area */
.tab-content {
  padding: 0 24rpx;
}

/* Stats Grid */
.stats-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  background: #FFF;
  border: 1rpx solid #E0E0E0;
  border-radius: 16rpx;
  padding: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cost-item {
  background: linear-gradient(135deg, #FFF, #FFF8F0);
  border-color: #F8E0CD;
}

.stat-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
}

.stat-label .icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 800;
  color: #333;
}

.stat-value.cost-value {
  color: #D35400;
  font-size: 36rpx;
}

/* Tags Section */
.tags-section {
  background: #FFF;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  /* Horizontal layout for space saving? No, keep stacked but tighter */
  align-items: center;
}

.section-label {
  font-size: 24rpx;
  color: #555;
  font-weight: 700;
  margin-right: 16rpx;
  /* Side label */
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-bottom: 0;
  /* Reset */
}

.section-label .icon {
  margin-right: 8rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}

.tag-pill {
  background-color: #E8F5E9;
  color: #2E7D32;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
  /* Can be small */
  font-weight: 600;
  border: 1rpx solid #C8E6C9;
  line-height: 12rpx;
}

/* Mechanics Section */
.mechanics-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.special-box {
  background-color: #FFF;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  /* Tighter padding */
  position: relative;
  overflow: hidden;
  border-left: 6rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  display: flex;
  /* Flex layout for side-by-side title/content */
  flex-direction: column;
}

.box-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.box-title {
  font-size: 26rpx;
  font-weight: 800;
  margin-left: 10rpx;
}

.box-content {
  font-size: 24rpx;
  color: #4A5568;
  line-height: 1.5;
}

/* Reward Box Styling */
.reward-box {
  background: #FFF8E1;
  /* Light Amber */
  border-left-color: #FFC107;
}

.reward-box .box-title {
  color: #B00020;
}

/* Dark Red */
.reward-box .icon {
  font-size: 28rpx;
}

/* Effect Box Styling */
.effect-box {
  background: #E3F2FD;
  /* Light Blue */
  border-left-color: #2196F3;
}

.effect-box .box-title {
  color: #1565C0;
}

/* Score Box Styling */
.score-box {
  background: #F3E5F5;
  /* Light Purple */
  border-left-color: #9C27B0;
}

.score-box .box-title {
  color: #7B1FA2;
}