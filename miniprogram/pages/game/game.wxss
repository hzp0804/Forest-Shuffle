/* 游戏按钮样式 */
.action-bar-inline {
  display: flex !important;
  gap: 12rpx;
  align-items: center;
}

.game-btn {
  margin: 0 !important;
  padding: 0 16rpx !important;
  font-size: 24rpx !important;
  line-height: 52rpx !important;
