@import "./animations.wxss";

/* 全局容器 */
.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #2c3e50;
  color: #ecf0f1;
  overflow: hidden;
  padding-top: calc(env(safe-area-inset-top, 0rpx) + 8rpx);
  box-sizing: border-box;
}

.loading-mask {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 32rpx;
  color: #bdc3c7;
}

/* 顶部玩家列表 */
.players-bar {
  min-height: 110rpx; /* 适配新的内边距 */
  margin-top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap; /* 禁止换行 */
  align-items: center;
  padding: 6rpx 20rpx; /* 缩小上下边距 */
  gap: 12rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.player-slot {
  width: calc(25% - 10rpx); 
  flex-shrink: 0;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.player-slot.is-me {
  border: 4rpx solid #f1c40f; 
  background: rgba(241, 196, 15, 0.15);
}

.player-slot.is-empty {
  background: rgba(0,0,0,0.2);
  border: 1rpx dashed #7f8c8d;
}

.empty-seat {
  color: #7f8c8d;
  font-size: 32rpx;
}

.p-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-bottom: 2rpx;
  border: 1rpx solid #bdc3c7;
}

.p-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.p-name {
  font-size: 20rpx; /* 字体加大 */
  color: #ecf0f1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  margin-bottom: 2rpx;
}

.p-stats {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
  justify-content: center;
  width: 100%;
}

.stat-item {
  font-size: 22rpx; /* 字体加大以显示4位数 */
  font-weight: bold;
  color: #ecf0f1;
}

/* 中间：牌桌区域 (Board) */
.game-board {
  background: #34495e;
  padding: 20rpx;
  display: flex; 
  flex-direction: column; /* 改为纵向，或者直接占满 */
  align-items: stretch;
  gap: 20rpx;
  overflow-y: auto;
}

/* 空地区域 */

/* 区域通用标题 */
.area-label {
  font-size: 20rpx;
  color: #bdc3c7;
  margin-bottom: 8rpx;
  padding-left: 4rpx;
}

/* 空地布局与手牌保持一致 */
/* 空地布局与手牌保持一致 */
.clearing-scroll {
  width: 100%;
  white-space: nowrap;
  overflow: visible;
}

.clearing-row {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 65rpx 4rpx 12rpx 20rpx;
  gap: 16rpx;
  box-sizing: border-box;
  width: max-content;
}

.clearing-card {
  animation: slideInUp 0.4s ease-out; /* Entry Animation for Clearing */
}

.clearing-row::after {
  content: '';
  flex: 0 0 40rpx; 
}

.clearing-card {
  background: #fff;
  transition: transform 0.2s, box-shadow 0.2s;
}

.clearing-card.selected {
  transform: translateY(-10rpx) scale(1.05);
  box-shadow: 0 0 0 6rpx #e74c3c, 0 16rpx 32rpx rgba(0,0,0,0.5); 
}

.clearing-card.placeholder {
  background: rgba(255,255,255,0.05);
  border: 2rpx dashed #95a5a6;
  color: #95a5a6;
  justify-content: center;
  align-items: center;
}

/* Board 里的卡片样式 */
.small-card {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  color: #2c3e50;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  text-align: center;
  padding: 4rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 玩家森林区域 */
.forest-area {
  min-height: 420rpx;
  background: rgba(0,0,0,0.15);
  border-radius: 12rpx;
  border: 2rpx dashed #5d6d7e;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 20rpx; 
  position: relative;
}

.forest-area .area-label {
  font-size: 24rpx;
  color: #bdc3c7;
  padding: 10rpx 0 0 16rpx;
  flex-shrink: 0; 
}

.forest-scroll {
  width: 100%;
  height: 420rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  align-items: center; 
  padding: 5rpx 5rpx;
  box-sizing: border-box;
}

/* 使用伪元素占位，解决 scroll-view 这里 flex 布局下 last-child margin-right 失效的问题 */
.forest-scroll::after {
  content: '';
  flex: 0 0 20rpx; /* 这里就是你想要的“右边距”宽度 */
  height: 1px;
}

.forest-card {
  width: 120rpx; /* 森林里的卡片大小 */
  height: 180rpx;
  background: #ecf0f1;
  border-radius: 8rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  overflow: visible; /* 允许阴影溢出 */
  box-shadow: 2rpx 2rpx 6rpx rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #7f8c8d;
  position: relative;
}

/* Hand Card Animation */
.hand-scroll .hand-card {
  animation: slideInUp 0.4s ease-out; 
}

.forest-card.placeholder {
  background: rgba(255,255,255,0.05);
  border: 2rpx dashed #95a5a6;
  color: #95a5a6;
}

.sapling-tag {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  padding: 4rpx 10rpx;
  background: rgba(46, 204, 113, 0.9);
  color: #0b2c18;
  font-size: 18rpx;
  border-radius: 6rpx;
  font-weight: 700;
  z-index: 2;
}

/* --- Tree Group Layout --- */
.tree-group {
    position: relative;
    width: 250rpx;
    height: 360rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
    transition: transform 0.2s;
    overflow: visible;
}

.tree-group.target-active {
    transform: scale(1.03); /* Keep the emphasis but avoid clipping inside scroll-view */
    z-index: 5;
}

/* Selection Ring/Glow for Target Tree */


/* Central Tree */
.tree-center {
    width: 120rpx;
    height: 180rpx;
    /* background: #aaa; */
    position: relative;
    border-radius: 8rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
    z-index: 10; /* Tree is above slots */
}

/* Slots Positioning */
.slot-pos {
    position: absolute;
    z-index: 5; /* Ensure slots are clickable above tree/bg */
    /* Empty slots need size and hit area */
    pointer-events: auto;
}

.slot-top {
    top: 0;
    left: 65rpx; /* Aligned with centered tree (250-120)/2 */
    transform: none;
    width: 120rpx;
    height: 180rpx; 
}

.slot-bottom {
    top: 180rpx; /* Starts where tree overlap ends */
    left: 65rpx;
    bottom: auto;
    transform: none;
    width: 120rpx;
    height: 180rpx;
}



/* Slot Card Container */
.slot-card {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    border-radius: 8rpx;
    background: #fff; 
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.3);
    transition: all 0.2s;
    border: none;
}

.slot-card.empty {
    background: rgba(255,255,255,0.1);
    border: 3rpx dashed rgba(255,255,255,0.7); /* Brighter and slightly thicker */
    box-shadow: none;
}

.slot-pos.valid-target .slot-card {
    background: rgba(46, 204, 113, 0.4) !important;
    border-color: #2ecc71 !important;
    box-shadow: 0 0 12rpx #2ecc71;
}

.slot-pos.invalid-target .slot-card {
    background: rgba(231, 76, 60, 0.4) !important;
    border-color: #e74c3c !important;
}

.slot-pos.selected .slot-card {
    border-color: #f1c40f !important;
    background: rgba(241, 196, 15, 0.3) !important;
    box-shadow: 0 0 16rpx #f1c40f;
    animation: pulseSlot 1.5s infinite;
}

@keyframes pulseSlot {
    0% { box-shadow: 0 0 8rpx #f1c40f; }
    50% { box-shadow: 0 0 20rpx #f1c40f; }
    100% { box-shadow: 0 0 8rpx #f1c40f; }
}

/* Cropping Logic: NOW RESET TO FULL VIEW because we use Overlap */
.slot-crop {
    position: absolute;
    width: 100%; 
    height: 100%;
}

/* Top Slot */
.slot-top .slot-crop {
    height: 100% !important;
    top: 0; 
}

/* Bottom Slot */
.slot-bottom .slot-crop {
    height: 100% !important;
    top: 0; 
}

/* For Side Slots (Left/Right) */
.slot-left {
    left: 6rpx;
    top: 90rpx;
    transform: none;
    width: 120rpx;
    height: 180rpx;
}

.slot-right {
    left: 127rpx;
    right: auto;
    top: 90rpx;
    transform: none;
    width: 120rpx;
    height: 180rpx;
}

.slot-left .slot-crop {
    width: 100% !important;
    height: 100%;
    left: 0;
    top: 0;
}

.slot-right .slot-crop {
    width: 100% !important;
    height: 100%;
    right: 0;
    left: 0;
    top: 0;
}


/* 底部区域：手牌 (Hand) */
.hand-area {
  height: 280rpx; /* 预留抬升空间 */
  background: #273746;
  padding: 12rpx 0rpx 6rpx;
  display: flex;
  flex-direction: column;
  overflow: visible;
}

.hand-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 8rpx;
  position: absolute;
  width: 100vw;
  box-sizing: border-box;
}

.area-title {
  font-size: 24rpx;
  color: #bdc3c7;
  width: 200rpx;
}

.instruction-tip {
  font-size: 24rpx;
  color: #bdc3c7; /* Default/Normal */
  font-weight: bold;
  transition: color 0.3s;
}

.instruction-tip.warning {
  color: #f39c12; /* Orange */
  animation: pulse 2s infinite;
}

.instruction-tip.error {
  color: #e74c3c; /* Red */
  animation: shake 0.5s;
}

.instruction-tip.success {
  color: #2ecc71; /* Green */
}

@keyframes pulse {
  0% { opacity: 0.8; }
  50% { opacity: 1; text-shadow: 0 0 4rpx rgba(243, 156, 18, 0.4); }
  100% { opacity: 0.8; }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-4rpx); }
  75% { transform: translateX(4rpx); }
}

.hand-scroll {
  flex: 1;
  width: 100%;
  white-space: nowrap;
  overflow: visible;
}

.hand-grid {
