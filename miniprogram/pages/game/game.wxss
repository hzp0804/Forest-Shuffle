/* 全局容器 */
.game-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #2c3e50;
  color: #ecf0f1;
  overflow: hidden;
  padding-top: calc(env(safe-area-inset-top, 0rpx) + 8rpx);
  box-sizing: border-box;
}

.loading-mask {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 32rpx;
  color: #bdc3c7;
}

/* 顶部玩家列表 */
.players-bar {
  min-height: 136rpx; /* 提高高度避免头像被切 */
  margin-top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap; /* 禁止换行 */
  align-items: center;
  padding: calc(env(safe-area-inset-top, 0rpx) + 8rpx) 20rpx 12rpx;
  gap: 12rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.player-slot {
  width: calc(25% - 10rpx); 
  flex-shrink: 0;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.player-slot.is-me {
  border: 4rpx solid #f1c40f; 
  background: rgba(241, 196, 15, 0.15);
}

.player-slot.is-empty {
  background: rgba(0,0,0,0.2);
  border: 1rpx dashed #7f8c8d;
}

.empty-seat {
  color: #7f8c8d;
  font-size: 32rpx;
}

.p-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-bottom: 2rpx;
  border: 1rpx solid #bdc3c7;
}

.p-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.p-name {
  font-size: 20rpx; /* 字体加大 */
  color: #ecf0f1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  margin-bottom: 2rpx;
}

.p-stats {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
  justify-content: center;
  width: 100%;
}

.stat-item {
  font-size: 22rpx; /* 字体加大以显示4位数 */
  font-weight: bold;
  color: #ecf0f1;
}

/* 中间：牌桌区域 (Board) */
.game-board {
  flex: 1; /* 占据剩余空间 */
  background: #34495e;
  padding: 20rpx;
  display: flex; 
  flex-direction: column; /* 改为纵向，或者直接占满 */
  align-items: stretch;
  gap: 20rpx;
  overflow-y: auto;
}

/* 空地区域 */

/* 区域通用标题 */
.area-label {
  font-size: 20rpx;
  color: #bdc3c7;
  margin-bottom: 8rpx;
  padding-left: 4rpx;
}

/* 空地布局与手牌保持一致 */
.clearing-scroll {
  width: 100%;
  white-space: nowrap;
}

.clearing-row {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  gap: 12rpx;
  padding: 12rpx 32rpx 8rpx 20rpx;
  min-height: 230rpx;
  box-sizing: border-box;
  overflow: visible;
}

.clearing-card {
  background: #fff;
}

.clearing-card.placeholder {
  background: rgba(255,255,255,0.05);
  border: 2rpx dashed #95a5a6;
  color: #95a5a6;
  justify-content: center;
  align-items: center;
}

/* Board 里的卡片样式 */
.small-card {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  color: #2c3e50;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  text-align: center;
  padding: 4rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 玩家森林区域 */
.forest-area {
  flex: 1; /* 占据剩余空间 */
  min-height: 260rpx; /* 关键：防止被压缩导致卡片显示不全 */
  background: rgba(0,0,0,0.15);
  border-radius: 12rpx;
  border: 2rpx dashed #5d6d7e;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 10rpx; /* 增加一点底部间距 */
}

.forest-area .area-label {
  font-size: 20rpx;
  color: #bdc3c7;
  margin-bottom: 8rpx;
}

.forest-scroll {
  flex: 1;
  width: 100%;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.forest-card {
  width: 120rpx; /* 森林里的卡片大小 */
  height: 180rpx;
  background: #ecf0f1;
  border-radius: 8rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 6rpx rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #7f8c8d;
  position: relative;
}

.forest-card.placeholder {
  background: rgba(255,255,255,0.05);
  border: 2rpx dashed #95a5a6;
  color: #95a5a6;
}

.sapling-tag {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  padding: 4rpx 10rpx;
  background: rgba(46, 204, 113, 0.9);
  color: #0b2c18;
  font-size: 18rpx;
  border-radius: 6rpx;
  font-weight: 700;
  z-index: 2;
}

/* 底部区域：手牌 (Hand) */
.hand-area {
  height: 280rpx; /* 预留抬升空间 */
  background: #273746;
  padding: 12rpx 0 6rpx;
  display: flex;
  flex-direction: column;
  overflow: visible;
}

.hand-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 8rpx;
}

.area-title {
  font-size: 24rpx;
  color: #bdc3c7;
}

.instruction-tip {
  font-size: 24rpx;
  color: #f39c12; /* 醒目橙色 */
  font-weight: bold;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 0.8; }
  50% { opacity: 1; text-shadow: 0 0 4rpx rgba(243, 156, 18, 0.4); }
  100% { opacity: 0.8; }
}

.hand-scroll {
  flex: 1;
  width: 100%;
  white-space: nowrap;
  overflow: visible;
}

.hand-grid {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 16rpx 32rpx 12rpx 20rpx;
  gap: 16rpx;
  height: 100%;
  box-sizing: border-box;
  overflow: visible;
  position: relative;
}

.hand-grid::after {
  content: '';
  flex: 0 0 40rpx; /* 右侧留白，避免贴边 */
}

/* 手牌卡片样式 */
.hand-card {
  /* 一屏5张：(750 - paddings) / 5 ≈ 140rpx */
  width: 140rpx; 
  height: 210rpx; /* 保持 ~2:3 比例 */
  background: #fff;
  border-radius: 8rpx;
  flex-shrink: 0; /* 禁止压缩 */
  color: #333;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.32);
  position: relative;
  transition: transform 0.2s, box-shadow 0.2s;
  margin-bottom: 0; 
}

.hand-card:last-child {
  /* margin-right handled by padding of container */
}

.hand-card.selected {
  transform: translateY(-16rpx);
  box-shadow: 0 0 0 6rpx #f1c40f, 0 8rpx 16rpx rgba(0,0,0,0.35); 
  z-index: 5;
}

.hand-card.primary:not(.selected) {
  box-shadow: 0 0 0 4rpx #2ecc71, 0 4rpx 12rpx rgba(0,0,0,0.28);
}

.hand-card.primary.selected {
  box-shadow: 0 0 0 6rpx #2ecc71, 0 0 0 12rpx #f1c40f, 0 8rpx 16rpx rgba(0,0,0,0.35);
}

.primary-flag {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  background: rgba(46, 204, 113, 0.95);
  color: #0b2c18;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-weight: 700;
  z-index: 2;
}

.card-header {
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 4rpx;
  font-size: 16rpx;
  color: white;
}

.card-cost-badge {
  background: rgba(0,0,0,0.3);
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 24rpx;
  font-weight: bold;
}

.card-body {
  flex: 1;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fdfdfd;
}

.card-type {
  font-size: 14rpx;
  color: #999;
}

.card-tags {
  font-size: 16rpx;
  color: #555;
  margin-top: 2rpx;
}

.card-footer {
  height: 40rpx; /* 可放效果文本 */
  background: #eee;
  padding: 4rpx 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-effect-text {
  font-size: 12rpx;
  color: #444;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 操作按钮 */
.action-bar {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: #1e2b3a;
}

.game-btn {
  font-size: 24rpx !important;
  background: #2ecc71 !important;
  color: white !important;
}

.game-btn.secondary {
  background: #e74c3c !important;
}

.game-btn.sapling-btn {
  background: #e67e22 !important;
}

.game-btn.draw-btn {
  background: #8e44ad !important; /* 紫色，致敬原来的牌库颜色 */
}

/* Sprite Card Styles */
.card-sprite-viewport {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 12rpx;
}

.card-sprite-img {
  max-width: none;
  max-height: none;
  display: block;
}

.selection-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* --- Gallery Style Modal (Copied & Adapted) --- */

.detail-modal-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.85); /* Darker backdrop */
  backdrop-filter: blur(5px);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.preview-card {
  width: 100%;
  max-width: 680rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 24rpx 48rpx rgba(0,0,0,0.5);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
  position: relative;
  animation: scaleIn 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}

@keyframes scaleIn {
  from { transform: scale(0.95); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.preview-header {
  background: #f0f4f1;
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e1e6e2;
  flex-shrink: 0;
}

.card-sprite-viewport.preview {
  width: 50%; /* Adjust size for preview */
  padding-top: 77.5%; 
  height: 0;
  position: relative;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.15);
  transform: rotate(0deg); 
  background: #ccc; 
}

.preview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #fff;
}

/* Tabs */
.species-tabs {
  display: flex;
  background: #f7f9f8;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  position: relative;
  transition: all 0.2s;
}

.tab-item.active {
  color: #2a4f25;
  font-weight: 700;
  background: #fff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background: #2a4f25;
  border-radius: 4rpx 4rpx 0 0;
}

/* Details Scroll */
.details-scroll {
  flex: 1;
  overflow-y: auto; 
  padding: 30rpx 40rpx;
  box-sizing: border-box;
}

.detail-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a1a1a;
}

/* Info Grid */
.info-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 40rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx dashed #eee;
}

.info-block {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: #f8fbf9; /* Light mint background */
  padding: 24rpx;
  border-radius: 16rpx;
}

.info-label {
  font-size: 26rpx;
  color: #2a4f25;
  font-weight: 600;
  width: 140rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-block .info-label {
  width: auto;
  margin-bottom: 4rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.info-value-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.highlight {
  font-weight: 700;
  color: #d35400;
}

.tag-pill {
  background: #e8f5e9;
  color: #2e7d32;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}
