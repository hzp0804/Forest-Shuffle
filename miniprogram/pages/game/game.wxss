  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 2rpx;
  display: block;
}

.p-stats {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
