.detail-container {
  padding: 40rpx;
  background-color: #FDFBF7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-preview-container {
  width: 500rpx;
  height: 0;
  padding-top: 155%; /* Maintain card ratio on devices without aspect-ratio support */
  position: relative;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 60rpx;
  background-color: #eee; 
  /* Fallback color */
}

/* Reusing sprite styles logic */
.card-sprite-viewport {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.card-sprite-img {
  max-width: none;
  max-height: none;
  display: block;
}

.card-info-panel {
  width: 100%;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.label {
  width: 200rpx;
  font-weight: bold;
  color: #555;
}

.value {
  flex: 1;
  color: #333;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  flex: 1;
}

.tag {
  background-color: #E8F5E9;
  color: #2E7D32;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.tag.tree-tag {
  background-color: #EFEBE9;
  color: #5D4037;
}
