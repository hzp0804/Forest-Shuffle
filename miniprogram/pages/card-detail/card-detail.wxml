<view class="detail-container">
  <view class="card-preview-container">
    <view class="card-sprite-viewport">
      <image class="card-sprite-img" src="{{card.img}}" style="{{card.spriteStyle}}" mode="aspectFill" webp="true" />
    </view>
  </view>

  <view class="card-info-panel">
    <view class="info-row">
      <text class="label">ID:</text>
      <text class="value">#{{card.id}}</text>
    </view>
    <view class="info-row">
      <text class="label">Type:</text>
      <text class="value">{{card.type}}</text>
    </view>
    <view class="info-row">
      <text class="label">Species:</text>
      <view class="tags">
        <text class="tag" wx:for="{{card.species}}" wx:key="*this">{{item}}</text>
      </view>
    </view>
    <view class="info-row" wx:if="{{card.tree_symbols && card.tree_symbols.length}}">
       <text class="label">Tree Symbols:</text>
       <view class="tags">
         <text class="tag tree-tag" wx:for="{{card.tree_symbols}}" wx:key="*this">{{item}}</text>
       </view>
    </view>
  </view>
</view>
