.lobby-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f6f9f2 0%, #e6f1e1 50%, #f8f3eb 100%);
  padding: 40rpx 32rpx 80rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.room-info {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.room-line {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.room-line .label {
  width: 140rpx;
  color: #334536;
  font-size: 28rpx;
  font-weight: 600;
}

.room-line .code {
  font-size: 32rpx;
  color: #2a4f25;
  font-weight: 700;
}

.seat-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.seat {
  background: #f6f8f4;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  border: 2rpx solid #e0e6df;
}

.seat-label {
  display: block;
  font-size: 26rpx;
  color: #60756a;
}

.seat-visual {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-top: 10rpx;
}

.seat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e6ece6;
}

.seat-avatar.placeholder {
  border: 2rpx dashed #c8d2c8;
}

.seat-name {
  display: block;
  font-size: 28rpx;
  color: #2a4f25;
  margin-top: 6rpx;
  font-weight: 600;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f1f1f1;
  flex-shrink: 0;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  min-width: 0; /* Allow text truncation if needed */
  padding-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 700;
  color: #2a4f25;
}

.uid {
  font-size: 24rpx;
  color: #73857a;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.mini-btn {
  padding: 12rpx 30rpx !important;
  font-size: 26rpx !important;
  line-height: normal !important;
  width: auto !important;
  min-width: 160rpx;
  text-align: center;
  white-space: nowrap;
  font-weight: 600;
  margin: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mini-btn.ghost {
  background: #ffffff;
  color: #3a6b35;
  border: 2rpx solid #3a6b35;
}

.user-actions {
  display: flex;
  gap: 12rpx;
}
.section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 26rpx 24rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.section-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2a4f25;
}

.section-sub {
  font-size: 24rpx;
  color: #9aa89e;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.form-item .label {
  width: 240rpx;
  font-size: 28rpx;
  color: #334536;
}

.label-row {
  width: 240rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.tip {
  font-size: 24rpx;
  color: #8aa092;
}

.input {
  flex: 1;
  background: #f6f8f4;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}

.picker-text {
  flex: 1;
  background: #f6f8f4;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}

.toggle {
  align-items: center;
}

.action-btn {
  width: 100%;
  border-radius: 16rpx;
  padding: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 4rpx;
}

.action-btn.primary {
  background: #3a6b35;
  color: #fff;
  border: none;
}

.action-btn.ghost {
  background: #ffffff;
  color: #3a6b35;
  border: 2rpx solid #3a6b35;
}

.hint {
  font-size: 22rpx;
  color: #9aa89e;
}

.join-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.join-input {
  flex: 1;
  background: #f6f8f4;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
